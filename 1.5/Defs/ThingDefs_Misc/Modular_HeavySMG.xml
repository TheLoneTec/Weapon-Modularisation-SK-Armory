			<WorkToMake>500</WorkToMake>
			<MarketValue>60</MarketValue>
			<Mass>0.198</Mass>
			<Bulk>0.25</Bulk>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
		</recipeMaker>
		<!-- <stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
