	<ThingDef ParentName="HvySMGGunPartBase">
		<defName>Module_HvySMG_MagClip</defName>
		<label>SMG magazine (straight, 30-rnd)</label>
		<description>Straight 30 round stick magazine designed for submachine guns and auto pistols.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Magazine_Pistol</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Mag_Pistol</uiIconPath>
