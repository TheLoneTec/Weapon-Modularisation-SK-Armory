<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- PISTOLS -->

<!-- SPHINX  -->

<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="RF_Gun_AT2K" or 
	defName="BuildSphinxPistol"]/description</xpath> 
	<value>
        <description>A improved version of the well-regard CZ-75 pistol. Popular among special forces and competitive shooters.
Type: 9mm Pistol
Pros: Accuracy
Cons: High production costs / Heavy</description>
	</value>
</Operation>
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="RF_Gun_AT2K"]/statBases/Mass</xpath> 
	<value>
                <Mass>1.5</Mass>
	</value>
</Operation>
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="RF_Gun_AT2K"]/statBases/ShotSpread</xpath> 
	<value>
         <ShotSpread>0.12</ShotSpread>
	</value>
</Operation>

<!-- Vektor CP1-->

<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="RF_Gun_VektorCP" or 
	defName="BuildVektorCP"]/description</xpath> 
	<value>
        <description>A small concealed-carry handgun. Would wager a guess that CP stands for Compact Pistol.
Type: 9mm Pistol
Pros: Compact
Cons: Small magazine</description>
	</value>
</Operation>
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="RF_Gun_VektorCP"]/comps/li[@Class="CombatExtended.CompProperties_AmmoUser"]/magazineSize</xpath> 
	<value>
                <magazineSize>10</magazineSize>
	</value>
</Operation>

<!-- S&W -->

<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="RF_Gun_Deringer" or 
	defName="BuildDeringerPistol"]/description</xpath> 
	<value>
        <description>An oldschool 6-shooter that packs a punch, but only at close range.
Type: .45 Pistol
Pros: Low production costs / Power
Cons: Poor range / Accuracy</description>
	</value>
</Operation>

<!-- Colt M1911 -->

<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_Revolver" or 
	defName="BuildHandGun"]/description</xpath> 
	<value>
        <description>An old army sidearm which was in use for over a century.
Type: .45 Pistol
Pros: Power
Cons: Small magazine</description>
	</value>
</Operation>

<!-- Pistole 1961 replaces para-ord-->
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_Autopistol" or 
	defName="BuildParaOrdnancePFourteenFortyfive"]/label</xpath> 
	<value>
        <label>Pistole 61</label>
	</value>
</Operation>
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_Autopistol"]/description</xpath> 
	<value>
        <description>A strange handgun of questionable origins.
Type: .45 Pistol
Pros: Power / Accuracy / Range
Cons: Heavy</description>
	</value>
</Operation>
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_Autopistol"]/statBases</xpath> 
	<value>
                <statBases>
                <MarketValue>900</MarketValue>
                <SightsEfficiency>0.9</SightsEfficiency>
                <ShotSpread>0.12</ShotSpread>
                <SwayFactor>1.5</SwayFactor>
                <RangedWeapon_Cooldown>0.32</RangedWeapon_Cooldown>
                <Bulk>3.5</Bulk>
                <Mass>1.8</Mass>
                </statBases>
	</value>
</Operation>
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_Autopistol"]/verbs/li[@Class="CombatExtended.VerbPropertiesCE"]/range</xpath> 
	<value>
                <range>30</range>
	</value>
</Operation>

</Patch>  

        