</Operation>
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_M37A2_USCM"]/comps/li[@Class="CombatExtended.CompProperties_AmmoUser"]/magazineSize</xpath> 
	<value>
                <magazineSize>8</magazineSize>
	</value>
</Operation>

