<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Charged blasters will become pulse guns a la Alien - fast firing, uses electrical pulses instead of a firing pin, at reletivistic velocities. Allows for smaller, lighter ammo, hence high rate of fire. 
-->



<!-- Cerberus Harrier (Mass Effect)-->
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_Harrier"]/label</xpath> 
	<value>
        <label>T-96 Harrier</label>
	</value>
</Operation>

<!-- Ikelos V102 shotgun (Destiny) -->
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_Predator"]/label</xpath> 
	<value>
        <label>T-102 Ikelos SG</label>
	</value>
</Operation>

<!-- Splitter (Titanfall)-->
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_Splitter"]/label</xpath> 
	<value>
        <label>T-6 Splitter</label>
	</value>
</Operation>

<!-- Dera (Warframe)-->
<Operation Class="PatchOperationReplace">
	<xpath>Defs/ThingDef[defName="Gun_ChargeRifle"]/label</xpath> 
	<value>
        <label>T-14 Dera</label>
	</value>
</Operation>

</Patch>  

        