<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_ModularChainShotgun</defName>
		<label>modular chain shotgun</label>
		<description>A magazine-fed fully automatic shotgun. It is even shorter-ranged than a typical shotgun, but is extraordinarily dangerous due to burst fire.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Gun/ChainShotgun/ChainShotgun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Shotgun</soundInteract>
		<weaponClasses>
			<li>ShortShots</li>
		</weaponClasses>
		<recipeMaker>
			<researchPrerequisite>GasOperation</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
			<displayPriority>435</displayPriority>
		</recipeMaker>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<statBases>
			<WorkToMake>31000</WorkToMake>
			<Mass>4.5</Mass>
			<AccuracyTouch>0.57</AccuracyTouch>
			<AccuracyShort>0.64</AccuracyShort>
			<AccuracyMedium>0.55</AccuracyMedium>
			<AccuracyLong>0.45</AccuracyLong>
			<RangedWeapon_Cooldown>1.35</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>70</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Shotgun</defaultProjectile>
				<warmupTime>1.2</warmupTime>
				<range>12.9</range>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<soundCast>Shot_Shotgun</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<weaponTags>
			<li>IndustrialGunAdvanced</li>
			<li>ShortShots</li>
		</weaponTags>
		<tools>
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>

		<comps>
			<li Class="RW_NodeTree.CompProperties_ChildNodeProccesser">
				<TextureSizeFactor>256</TextureSizeFactor>
				<TextureFilterMode>Point</TextureFilterMode>
				<ExceedanceFactor>2</ExceedanceFactor>
				<ExceedanceOffset>1</ExceedanceOffset>
				<ForceNodeIdControl>true</ForceNodeIdControl>
			</li>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<setRandomPartWhenCreate>true</setRandomPartWhenCreate>
				<attachmentProperties>
					<li>
						<id>ModChainSG_Magazine</id>
						<name>magazine</name>
						<UITexPath>ui/icons/AttachmentIcon/AttachmentIcon_Mag</UITexPath>
						<postion>(0,0.1,0)</postion>
						<defultThing>Module_AR_MagClip</defultThing>
						<allowEmpty>true</allowEmpty>
						<filter>
							<thingDefs>
								<li>Module_ChainSG_MagClip</li>
								<li>Module_ChainSG_MagDrum</li>
							</thingDefs>
						</filter>
						<randomThingDefWeights>
							<Module_ChainSG_MagClip>1</Module_ChainSG_MagClip>
							<Module_ChainSG_MagDrum>1</Module_ChainSG_MagDrum>
						</randomThingDefWeights>
					</li>
					<li>
						<id>ModChainSG_Sight</id>
						<name>sight</name>
						<UITexPath>ui/icons/AttachmentIcon/AttachmentIcon_Scope</UITexPath>
						<postion>(0.1,0.1,-0.01)</postion>
						<allowEmpty>true</allowEmpty>
						<filter>
							<thingDefs>
								<li>Module_HoloSight</li>
								<li>Module_RedDotSight</li>
							</thingDefs>
						</filter>
					</li>
					<li>
						<id>ModChainSG_UnderBarrel</id>
						<name>under barrel</name>
						<UITexPath>ui/icons/AttachmentIcon/AttachmentIcon_Underbarrel</UITexPath>
						<verbPropertiesObjectPatchByChildPart Default="false" />
						<allowEmpty>true</allowEmpty>
						<postion>(0.03,0.1,0)</postion>
						<filter>
							<thingDefs>
								<li>Module_UBGLLight</li>
								<li>Module_VerticalGrip</li>
								<li>Module_AngledGrip</li>
							</thingDefs>
						</filter>
					</li>
					<li>
						<id>ModChainSG_Receiver</id>
						<name>chamber</name>
						<UITexPath>ui/icons/AttachmentIcon/AttachmentIcon_Receiver</UITexPath>
						<postion>(0,0.1,0)</postion>
						<allowEmpty>true</allowEmpty>
						<filter>
							<thingDefs>
								<li>Module_ModChainSG_Chamber</li>
							</thingDefs>
						</filter>
					</li>
					<li>
						<id>ModChainSG_Muzzle</id>
						<name>muzzle</name>
						<UITexPath>ui/icons/AttachmentIcon/AttachmentIcon_Muzzle</UITexPath>
						<postion>(0.46875,0.1,-0.0078125)</postion>
						<scale>(0.75,0,0.75)</scale>
						<allowEmpty>true</allowEmpty>
						<filter>
							<thingDefs>
								<li>Module_Silencer</li>
								<li>Module_MuzzleBrake</li>
								<li>Module_MuzzleCompensator</li>
								<li>Module_FlashHider</li>
								<li>Module_SGmuzzleChoke</li>
							</thingDefs>
						</filter>
					</li>
				</attachmentProperties>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_ModularPumpShotgun</defName>
		<label>modular pump shotgun</label>
		<description>An ancient design of shotgun that emits a tight-packed spray of pellets. Deadly, but short range.</description>
		<possessionCount>1</possessionCount>
		<graphicData>
			<texPath>Things/WeaponPart/Gun/Shotgun/Shotgun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Shotgun</soundInteract>
		<weaponClasses>
			<li>ShortShots</li>
		</weaponClasses>
		<weaponTags>
			<li>ShortShots</li>
		</weaponTags>
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<Mass>3.4</Mass>
			<AccuracyTouch>0.80</AccuracyTouch>
			<AccuracyShort>0.87</AccuracyShort>
			<AccuracyMedium>0.77</AccuracyMedium>
			<AccuracyLong>0.64</AccuracyLong>
			<RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>60</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
			<displayPriority>430</displayPriority>
		</recipeMaker>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Shotgun</defaultProjectile>
				<warmupTime>0.9</warmupTime>
				<range>15.9</range>
				<soundCast>Shot_Shotgun</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<comps>
			<li Class="RW_NodeTree.CompProperties_ChildNodeProccesser">
				<TextureSizeFactor>256</TextureSizeFactor>
				<TextureFilterMode>Point</TextureFilterMode>
				<ExceedanceFactor>2</ExceedanceFactor>
				<ExceedanceOffset>1</ExceedanceOffset>
				<ForceNodeIdControl>true</ForceNodeIdControl>
			</li>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<setRandomPartWhenCreate>true</setRandomPartWhenCreate>
				<attachmentProperties>
					<li>
						<id>ModPumpSG_Sight</id>
						<name>sight</name>
						<UITexPath>ui/icons/AttachmentIcon/AttachmentIcon_Scope</UITexPath>
						<postion>(0.15,0.1,0)</postion>
						<allowEmpty>true</allowEmpty>
						<filter>
							<thingDefs>
								<li>Module_HoloSight</li>
								<li>Module_RedDotSight</li>
							</thingDefs>
						</filter>
					</li>
					<li>
						<id>ModPumpSG_Muzzle</id>
						<name>muzzle</name>
						<UITexPath>ui/icons/AttachmentIcon/AttachmentIcon_Muzzle</UITexPath>
						<postion>(0.5,0.1,0.02734375)</postion>
						<scale>(0.75,0,0.75)</scale>
						<allowEmpty>true</allowEmpty>
						<filter>
							<thingDefs>
								<li>Module_Silencer</li>
								<li>Module_MuzzleBrake</li>
								<li>Module_MuzzleCompensator</li>
								<li>Module_FlashHider</li>
								<li>Module_SGmuzzleChoke</li>
							</thingDefs>
						</filter>
					</li>
				</attachmentProperties>
			</li>
		</comps>
	</ThingDef>

	<ThingCategoryDef>
		<defName>ThingCategory_SGGunParts</defName>
		<label>shotgun parts</label>
		<parent>ThingCategory_GunParts</parent>
	</ThingCategoryDef>

	<ThingDef Name="SGGunPartBase" ParentName="GunPartBase"  Abstract="True">
		<thingCategories>
			<li>ThingCategory_SGGunParts</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="SGGunPartBase">
		<defName>Module_ChainSG_MagClip</defName>
		<label>chain shotgun magazine</label>
		<description>Standard 10 round clip magazine designed for the chain shotgun.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Magazine_Generic</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Mag</uiIconPath>
		<statBases>
			<WorkToMake>500</WorkToMake>
			<Mass>0.3</Mass>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>GasOperation</researchPrerequisite>
		</recipeMaker>
		<costList>
			<Steel>30</Steel>
		</costList>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Gun/ChainShotgun/ChainShotgun_Magazine</PartTexPath>
				<verbPropertiesObjectPatch>
					<li>
						<burstShotCount>3</burstShotCount>
					</li>
				</verbPropertiesObjectPatch>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="SGGunPartBase">
		<defName>Module_ChainSG_MagDrum</defName>
		<label>chain shotgun drum magazine</label>
		<description>20 round drum magazine provides better sustained firepower, at the cost of reload speed. It also affects the center of gravity of the gun, making it unwieldy.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Magazine_Drum</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Mag_Drum</uiIconPath>
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<Mass>0.7</Mass>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>GasOperation</researchPrerequisite>
		</recipeMaker>
		<costList>
			<Steel>60</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Gun/ChainShotgun/ChainShotgun_CartridgeDrum</PartTexPath>
				<verbPropertiesObjectPatch>
					<li>
						<burstShotCount>5</burstShotCount>
					</li>
				</verbPropertiesObjectPatch>
				<verbPropertiesMultiplier>
					<li>
						<warmupTime>1.1</warmupTime>
					</li>
				</verbPropertiesMultiplier>
				<statMultiplier>
					<AccuracyTouch>0.9</AccuracyTouch>
					<AccuracyShort>0.9</AccuracyShort>
					<AccuracyMedium>0.8</AccuracyMedium>
					<AccuracyLong>0.8</AccuracyLong>
					<RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
				</statMultiplier>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="SGGunPartBase">
		<defName>Module_SGmuzzleChoke</defName>
		<label>muzzle choke</label>
		<description>An muzzle device that tightens the spread of pellets, making it more accurate at medium distance, but harder to hit at close range..</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Muzzle_Choke</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Muzzle_Choke</uiIconPath>
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<Mass>0.5</Mass>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
		</recipeMaker>
		<costList>
			<Steel>40</Steel>
		</costList>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Gun/ChainShotgun/ChainShotgun_Buncher</PartTexPath>
				<verbPropertiesOffseter>
					<li>
						<range>3</range>
					</li>
				</verbPropertiesOffseter>
				<statMultiplier>
					<AccuracyTouch>0.8</AccuracyTouch>
					<AccuracyMedium>1.2</AccuracyMedium>
				</statMultiplier>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="HvySMGGunPartBase">
		<defName>Module_ModChainSG_Chamber</defName>
		<label>reinforced receiver</label>
		<description>TODO</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Component_Generic</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Receiver_Component</uiIconPath>
		<statBases>
			<Mass>0.1</Mass>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>GasOperation</researchPrerequisite>
		</recipeMaker>
		<costList>
			<Steel>30</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<notDrawInParent>true</notDrawInParent>
				<verbPropertiesMultiplier>
					<li>
						<ticksBetweenBurstShots>0.75</ticksBetweenBurstShots>
					</li>
				</verbPropertiesMultiplier>
				<statMultiplier>
					<AccuracyTouch>0.9</AccuracyTouch>
					<AccuracyShort>0.9</AccuracyShort>
					<AccuracyMedium>0.9</AccuracyMedium>
					<AccuracyLong>0.9</AccuracyLong>
				</statMultiplier>
			</li>
		</comps>
	</ThingDef>
</Defs>